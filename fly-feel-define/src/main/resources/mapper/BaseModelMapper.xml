    <delete id="deleteByPrimaryKey">
        delete
        from `${tableName}`
        where `${tableName}`.id = #{primaryKey}
    </delete>
    <update id="updateByPrimaryKeySelective" parameterType="io.gitee.core.entity.model.BaseModel">
        update `${tableName}`
        <set>
            `${tableName}`.id          = `${tableName}`.id,
            `${tableName}`.update_by   = #{form.updateBy},
            `${tableName}`.update_time = now(),
            <if test="form.enable != null">
                `${tableName}`.`enable` = #{form.enable},
            </if>
            <if test="form.del != null">
                `${tableName}`.del = #{form.del},
            </if>
            <if test="form.remark != null and form.remark != ''">
                `${tableName}`.remark = #{form.remark},
            </if>
            <if test="form._version != null">
                `${tableName}`._version = #{form._version},
            </if>
        </set>
        where `${tableName}`.id = #{form.id}
    </update>

    <select id="isExpiresByBaseModel" resultType="java.lang.Boolean">
        select #{query._version} - `${tableName}`._version
        from `${tableName}`
        where `${tableName}`.id = #{query.id}
    </select>
